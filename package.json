{
  "name": "deall-test",
  "version": "1.0.0",
  "description": "REST API for Deall! Test",
  "main": "bin/www",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/src/index.js",
    "dev": "nodemon | pino-pretty",
    "test": "jest --passWithNoTests",
    "lint": "eslint . --ext .ts",
    "fix": "eslint . --ext .ts --fix",
    "prepare": "husky install",
    "docker": "docker build -f ./deploy/docker/Dockerfile . -t madeindra/deall",
    "compose": "docker compose -f ./deploy/docker/docker-compose.yml --env-file .env up",
    "kube": "kubectl apply -f ./deploy/api-deployment.yaml -f ./deploy/mongodb-service.yaml -f ./deploy/api-service.yaml -f ./deploy/mongo-persistentvolumeclaim.yaml -f ./deploy/default-networkpolicy.yaml -f ./deploy/mongodb-deployment.yaml"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "dist",
      "node_modules"
    ],
    "exec": "ts-node ./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "github.com/madeindra/deall-test"
  },
  "author": "madeindra",
  "license": "ISC",
  "dependencies": {
    "@joi/date": "^2.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^6.0.0",
    "jest": "^29.2.1",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.8.1",
    "pino": "^8.4.0",
    "pino-http": "^8.2.0",
    "swagger-ui-express": "^4.5.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.7.21",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^8.0.0",
    "nodemon": "^2.0.19",
    "pino-pretty": "^9.0.0",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.2",
    "typescript": "^4.8.3"
  }
}
